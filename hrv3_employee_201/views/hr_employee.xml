<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Inherit Form view -->
    <record id="inherit_employee_form_view" model="ir.ui.view">
      <field name="name">hr.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <field name="passport_id" position="after">
          <field name="passport_validity_date" groups="hr.group_hr_user"/>
          <field name="place_of_passport_issuance" groups="hr.group_hr_user"/>
        </field>

        <field name="country_of_birth" position="after">
          <field name="age"/>
        </field>

        <page name="personal_information" position="after">
          <page name="requirements" string="Pre-Requirements">
            <group string="Pre-employment Requirements">
              <div class="container">
                <div class="row">
                  <div class="col-sm-4">
                    <span>
                      <field name="sss_checkbox" nolabel="1" readonly="1" class="oe_inline"/>
                      <label for="sss" class="oe_inline" />
                    </span>
                    <br/>

                    <span>
                      <field name="hdmf_checkbox" nolabel="1" readonly="1" class="oe_inline" />
                      <label for="hdmf" class="oe_inline"/>
                    </span>
                    <br/>

                    <span>
                      <field name="philhealth_checkbox" nolabel="1" readonly="1" class="oe_inline"/>
                      <label for="philhealth"/>
                    </span>
                    <br/>

                    <span>
                      <field name="gsis_checkbox" nolabel="1" readonly="1" class="oe_inline"/>
                      <label for="gsis" class="oe_inline" />
                    </span>
                    <br/>

                    <span>
                      <field name="tin_checkbox" nolabel="1" readonly="1" class="oe_inline"/>
                      <label for="tin" class="oe_inline"/>
                    </span>
                    <br/>

                    <span>
                      <field name="medical_transaction_number_checkbox" nolabel="1" readonly="1" class="oe_inline"/>
                      <label for="medical_transaction_number"/>
                    </span>
                    <br/>

                    <span>
                      <field name="nbi_checkbox" nolabel="1" readonly="1" class="oe_inline" />
                      <label for="nbi_clearance" class="oe_inline" />
                    </span>
                  </div>

                  <div class="col-sm-4">
                    <span>
                      <field name="sss" class="oe_inline" placeholder="e.g. 34-2431064-5"/>
                    </span>
                    <br/>

                    <span>
                      <field name="hdmf" class="oe_inline" placeholder="e.g. 1234567"/>
                    </span>
                    <br/>

                    <span>
                      <field name="philhealth" class="oe_inline" placeholder="e.g. 34-2431064-5"/>
                    </span>
                    <br/>

                    <span>
                      <field name="gsis" class="oe_inline" placeholder="e.g. 34-2431064-5"/>
                    </span>
                    <br/>

                    <span>
                      <field name="tin" class="oe_inline" placeholder="e.g. 000-123-456-001"/>
                    </span>
                    <br/>

                    <span>
                      <field name="medical_transaction_number" class="oe_inline"/>
                    </span>
                    <br/>

                    <div>
                      <field name="nbi_clearance" class="oe_inline" placeholder="No."/>
                      <field name="nbi_expiration" class="oe_inline" placeholder="Expiration Date" nolabel="1"/>
                    </div>

                    <div>
                      <field name="nbi_issued_at" class="oe_inline" placeholder="Issued At" nolabel="1"/>
                      <field name="nbi_date_issued" class="oe_inline" placeholder="Date Issued" nolabel="1"/>
                    </div>

                    <div>
                      <field name="nbi_clearance_photo"/>
                    </div>
                  </div>

                  <div class="col-sm-4">
                    <div>
                      <field name="birth_checkbox"/>
                      <label for="birth_certificate"/>
                      <field name="birth_certificate"/>
                    </div>

                    <div>
                      <field name="tor_checkbox"/>
                      <label for="transcript_of_records"/>
                      <field name="transcript_of_records"/>
                    </div>

                    <div>
                      <field name="diploma_checkbox"/>
                      <label for="diploma"/>
                      <field name="diploma"/>
                    </div>
                  </div>
                </div>
              </div>
            </group>

            <group>
              <div>
                <field name="police_checkbox" nolabel="1" readonly="1"/>
                <label for="police_clearance"/>
                <div>
                  <field name="police_clearance" class="oe_inline" placeholder="No."/>
                  <field name="police_expiration" class="oe_inline" placeholder="Expiration Date" nolabel="1"/>
                </div>

                <div>
                  <field name="police_issued_at" class="oe_inline" placeholder="Issued At" nolabel="1"/>
                  <field name="police_date_issued" class="oe_inline" placeholder="Date Issued" nolabel="1"/>
                </div>

                <div>
                  <field name="police_clearance_photo"/>
                </div>
              </div>
            </group>

            <group>
              <div>
                <field name="barangay_checkbox" nolabel="1" readonly="1"/>
                <label for="barangay_clearance"/>
                <div>
                  <field name="barangay_clearance" class="oe_inline" placeholder="No."/>
                  <field name="barangay_expiration" class="oe_inline" placeholder="Expiration Date" nolabel="1"/>
                </div>

                <div>
                  <field name="barangay_issued_at" class="oe_inline" placeholder="Issued At" nolabel="1"/>
                  <field name="barangay_date_issued" class="oe_inline" placeholder="Date Issued" nolabel="1"/>
                </div>

                <div>
                  <field name="barangay_clearance_photo"/>
                </div>
              </div>
            </group>
          </page>

          <page string="Skills and Training" name="for_skills">
            <label for="skill_ids"/>
            <field name="skill_ids">
              <tree editable="bottom">
                <field name="skill_name"/>
                <field name="skill_type_id"/>
                <field name="skill_level_id"/>
              </tree>
            </field>
          </page>

          <page string="Health Information">
            <group>
              <field name="fit_to_work"/>
            </group>
            <group>
              <group string="Current Medical Information">
                <label for="height"/>
                <div class="o_row">
                  <field name="height" nolabel="1"/>
                  <span>
                    <field name="height_uom" placeholder="mm"/>
                  </span>
                </div>
                <label for="weight"/>
                <div class="o_row">
                  <field name="weight" nolabel="1"/>
                  <span>
                    <field name="weight_uom" placeholder="kg"/>
                  </span>
                </div>
                <field name="blood_type"/>
                <field name="drug_test"/>
              </group>

              <group/>

              <group string="Health Insurance">
                <field name="health_card_provider"/>
                <field name="id_number"/>
                <field name="cap_limit"/>
                <field name="credit_usage"/>
              </group>

              <group string="Insert HMO, renewal, etc. here">
              </group>
            </group>
          </page>
        </page>
      </field>
    </record>

  </data>
</odoo>
