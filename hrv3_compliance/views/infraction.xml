<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="hrv3_compliance_infraction_list">
      <field name="name">HRV3 Infraction List</field>
      <field name="model">hr.infraction</field>
      <field name="arch" type="xml">
        <tree>
          <field name="infraction_sequence_id"/>
          <field name="emp_id" string="Name"/>
          <field name="violation_id"/>
          <field name="policy_violated_ids" invisible="1" />
          <field name="violation_date"/>
          <field name="history"/>
        </tree>
      </field>
    </record>


    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="hrv3_compliance_infraction_form">
      <field name="name">HRV3 Infraction Form</field>
      <field name="model">hr.infraction</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button string="Open" type="object" name="set_state_open" class="oe_highlight" attrs="{'invisible':[('state','not in','draft')]}"/>
            <button string="In Progress" type="object" name="set_state_inprogress" class="oe_highlight" attrs="{'invisible':[('state','not in','open')]}"/>
            <button string="For Closure" type="object" name="set_state_forclosure" class="oe_highlight" attrs="{'invisible':[('state','not in','in_progress')]}"/>
            <button string="Close" type="object" name="set_state_closed" class="oe_highlight" attrs="{'invisible':[('state','not in','for_closure')]}"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,open,in_progress,for_closure,closed"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="infraction_sequence_id" readonly="1" force_save="1"/>
              </h1>
            </div>
            <group>
              <group string="Employee Details">
                <field name="emp_id" string="Name"/>
                <field name="job_id" string="Job Description"/>
                <field name="manager_id"/>
              </group>

              <group string="Violation Details">
                <field name="violation_id"/>
                <field name="policy_violated_ids" invisible="1" />
                <field name="policy_violated_id"/>
                <field name="offense_code_id"/>
                <field name="frequency" />
                <field name="violation_date"/>
                <div class="col-xs-4">
                </div>
                <div class="col-xs-4">
                  <button type="object" string="History..." name="type_offenses_others" icon="fa-clock-o" class="oe_inline oe_link"/>
                </div>
                <field name="case_status"/>
              </group>
            </group>
            <group>
              <field name="violation_details"/>
              <field name="history">
                <tree>
                  <control>
                    <create string="Add record" context="{'default_infraction_id': id}" />
                  </control>
                  <field name="stage"/>
                  <field name="corrective_action"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
                  <field name="duration"/>
                  <field name="days_remaining"/>
                </tree>
              </field>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hrv3_compliance_infraction_action_window">
      <field name="name">Infraction</field>
      <field name="res_model">hr.infraction</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
    </record>


    <!-- server action to the one above -->
