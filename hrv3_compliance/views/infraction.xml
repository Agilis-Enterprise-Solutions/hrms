      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
    <menuitem name="Compliance" id="hrv3_compliance_root" sequence="5" parent="hr.menu_hr_root"/>

    <!-- actions -->
    
    <menuitem name="Infractions" id="hrv3_compliance.infractions" parent="hrv3_compliance_root" action="hrv3_compliance_infraction_action_window"/>
    <menuitem name="Configuration" id="hrv3_compliance_configuration" parent="hrv3_compliance_root"/>
   
  </data>
</odoo>