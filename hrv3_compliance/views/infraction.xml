<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hrv3_compliance_infraction_list">
      <field name="name">HRV3 Infraction List</field>
      <field name="model">hr.infraction</field>
      <field name="arch" type="xml">
        <tree>
          <field name="emp_id" string="Name"/>
          <field name="violation_id"/>
          <field name="violation_date"/>
          <field name="corrective_action"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hrv3_compliance_infraction_form">
      <field name="name">HRV3 Infraction Form</field>
      <field name="model">hr.infraction</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button string="Submit" class="oe_highlight" states="open"/>
            <button string="Discard" class="oe_highlight" states="open"/>
            <field name="state" widget="statusbar" statusbar_visible="open,in_progress,closure,closed"/>
          </header>
          <sheet>
            <group>
              <group string="Employee Details"> 
                <field name="emp_id" string="Name"/>
                <field name="job_id" string="Job Description"/>
                <field name="manager_id"/>
              </group>

              <group string="Violation Details"> 
                <field name="violation_id"/>
                <field name="policy_id"/>
                <field name="frequency_id"/>
                <field name="violation_date"/>
                <field name="case_status"/>
              </group>
            </group>
            <group>
              <field name="violation_details"/>
              <field name="corrective_action"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="hrv3_compliance_infraction_action_window">
      <field name="name">Infraction</field>
      <field name="res_model">hr.infraction</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
    </record>
   

    <!-- server action to the one above -->
