<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- hrv3.training Action -->
    <record id="hrv3_training_action_form" model="ir.actions.act_window">
      <field name="name">Training</field>
      <field name="res_model">hrv3.training</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- hrv3.training Tree View -->
    <record id="hrv3_training_view_tree" model="ir.ui.view">
      <field name="name">hrv3.training.tree</field>
      <field name="model">hrv3.training</field>
      <field name="arch" type="xml">
        <tree>
          <field name="training_name"/>
        </tree>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Training" id="hrv3_training" sequence="1"
              action="hrv3_training_action_form"/>

    <!-- hrv3.training Form View -->
    <record id="hrv3_training_view_form" model="ir.ui.view">
      <field name="name">hrv3.training.form</field>
      <field name="model">hrv3.training</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group string="Training Details">
              <group>
                <field name="training_name"/>
                <field name="subject"/>
                <field name="training_type"/>
                <field name="date_completed"/>
                <field name="venue"/>
                <field name="acquire_certificate"/>
              </group>

              <group>
                <field name="trainor"/>
                <field name="hour"/>
                <field name="cost"/>
                <field name="sponsor"/>
                <field name="status"/>
              </group>
            </group>

            <label for="employee_ids"/>
            <field name="employee_ids" widget="many2many_tags"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Inherit Form view -->
    <record id="inherit_employee_for_training" model="ir.ui.view">
      <field name="name">hr.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id"
             ref="hrv3_employee_201.inherit_employee_form_view"/>
      <field name="arch" type="xml">
        <page name="for_skills" position="inside">
          <label for="training_ids"/>
          <field name="training_ids">
            <tree>
              <field name="training_name" string="Training Name"/>
              <field name="subject"/>
              <field name="training_type"/>
              <field name="date_completed"/>
              <field name="venue"/>
              <field name="acquire_certificate"/>
              <field name="trainor"/>
              <field name="hour"/>
              <field name="cost"/>
              <field name="sponsor"/>
              <field name="status"/>
            </tree>
          </field>
        </page>
      </field>
    </record>
  </data>
</odoo>
